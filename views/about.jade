extends layout

block content
    include templates/slider
    .fh5co-about.animate-box
        .col-md-6.col-md-offset-3.text-center.fh5co-heading
            h2 Company History
            p
                | Screw-IT was established in 2016 by Mr. Jovani Warguez and Ms Neryl Empenio.
                | It started in troubleshooting 2-3 PCs until it grow and become a habit.
                | With their passion for technology, they enhance their skill set and
                | techniques of solving technology issues.
        .container
            .col-md-12
                figure
                    img.img-responsive(src="/images/about/history.png", alt="Free HTML5 Template")
    .fh5co-team.animate-box
        .container
            .row
                .col-md-6.col-md-offset-3.text-center.fh5co-heading
                    h2 The Team
                    p
                        | Computer Engineers from Polytechnic University of the Philippines, Manila
                .col-md-10.col-md-offset-1.text-center.fh5co-heading
                    each teamMemberData in teamMembersData
                        .col-md-6.fh5co-staff
                            .team-avatar(style="background-image: url('#{teamMemberData.avatar}');")
                            h3= teamMemberData.name
                            h4= teamMemberData.position
                            ul.fh5co-social
                                if teamMemberData.wordpress
                                    li
                                        a(href="#{teamMemberData.wordpress}", target="_blank")
                                            i.icon-wordpress &nbsp;
                                if teamMemberData.facebook
                                    li
                                        a(href="#{teamMemberData.facebook}", target="_blank")
                                            i.icon-facebook &nbsp;
                                if teamMemberData.twitter
                                    li
                                        a(href="#{teamMemberData.twitter}", target="_blank")
                                            i.icon-twitter &nbsp;
                                if teamMemberData.instagram
                                    li
                                        a(href="#{teamMemberData.instagram}", target="_blank")
                                            i.icon-instagram &nbsp;
                                if teamMemberData.googleplus
                                    li
                                        a(href="#{teamMemberData.googleplus}", target="_blank")
                                            i.icon-google-plus &nbsp;
                                if teamMemberData.linkedin
                                    li
                                        a(href="#{teamMemberData.linkedin}", target="_blank")
                                            i.icon-linkedin &nbsp;
                                if teamMemberData.youtube
                                    li
                                        a(href="#{teamMemberData.youtube}", target="_blank")
                                            i.icon-youtube-play &nbsp;
                                if teamMemberData.github
                                    li
                                        a(href="#{teamMemberData.github}", target="_blank")
                                            i.icon-github &nbsp;
                                if teamMemberData.codepen
                                    li
                                        a(href="#{teamMemberData.codepen}", target="_blank")
                                            i.icon-codepen
    include templates/call-to-action